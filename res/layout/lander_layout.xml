<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.pilot51.lander.LanderView
		android:id="@+id/lander"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<TextView
			android:id="@+id/valueAlt"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:gravity="center_horizontal"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/valueVelX"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/valueAlt"
			android:gravity="center_horizontal"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/valueVelY"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/valueVelX"
			android:gravity="center_horizontal"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/valueFuel"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/valueVelY"
			android:gravity="center_horizontal"
			android:textStyle="bold" />
		<TextView
			android:text="@string/altitude"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/valueAlt"
			android:textStyle="bold" />
		<TextView
			android:text="@string/velocity_x"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/valueAlt"
			android:layout_toLeftOf="@+id/valueVelX"
			android:textStyle="bold" />
		<TextView
			android:text="@string/velocity_y"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/valueVelX"
			android:layout_toLeftOf="@+id/valueVelY"
			android:textStyle="bold" />
		<TextView
			android:text="@string/fuel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/valueVelY"
			android:layout_toLeftOf="@+id/valueFuel"
			android:textStyle="bold" />
		<Button
			android:id="@+id/btnRight"
			android:background="@drawable/btn_right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/valueFuel"
			android:layout_marginRight="2dp" />
		<Button
			android:id="@+id/btnLeft"
			android:background="@drawable/btn_left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/valueFuel"
			android:layout_toLeftOf="@+id/btnRight"
			android:layout_marginRight="2dp" />
		<Button
			android:id="@+id/btnThrust"
			android:background="@drawable/btn_thrust"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/btnRight"
			android:layout_marginRight="27dp"
			android:layout_marginTop="2dp" />
	</RelativeLayout>
</FrameLayout>
